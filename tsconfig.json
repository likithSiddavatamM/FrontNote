    "target": "es6",
    "module": "commonjs",
    "allowJs": true,
    "outDir": "./build",
    "rootDir": "./",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule":true
  },
  "include": ["src//","tests/**/*"],
  "exclude": ["node_modules"],
  
  "ts-node": {
    "transpileOnly": true,
    "files": true
  }
}